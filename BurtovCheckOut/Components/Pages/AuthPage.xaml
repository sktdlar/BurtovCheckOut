<Page x:Class="BurtovCheckOut.Components.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BurtovCheckOut.Components.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="White"
      Title="AuthPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center">Вход</TextBlock>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" >Логин</TextBlock>
                <TextBox Name="LoginTb"  Margin="10 10 10 10" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" >Пароль</TextBlock>
                <TextBox Name="PasswordTb"  Margin="10 0 10 0" Width="200"/>
            </StackPanel>
            <Button Margin="10" Name="AuthBtn" Click="AuthBtn_Click">Вход</Button>
            <Button Margin="10 0 10 0" Name="RegBtn">Регистрация</Button>
        </StackPanel>
    </Grid>
</Page>
